@model _12_Weboto.Models.News

@{
    ViewData["Title"] = "Chi tiết tin tức";
}
<h2>Chi tiết tin tức</h2>
<div>
    <h3>@Model.Title</h3>
    <p><strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
    <p><strong>Danh mục:</strong> @Model.Category?.Name</p>
    <p><strong>Tác giả:</strong> @Model.CreatedBy</p>
    <p>@Html.Raw(Model.Content)</p>
    <h4>Hình ảnh</h4>
    <div>
        @foreach (var image in Model.Images)
        {
            <img src="@image.ImageUrl" class="img-thumbnail" style="max-width: 200px; margin: 5px;" />
        }
    </div>
</div>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>