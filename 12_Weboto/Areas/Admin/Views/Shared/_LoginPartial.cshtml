@using Microsoft.AspNetCore.Identity 
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var isAdminPage = Context.Request.Path.StartsWithSegments("/Admin");
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        if (!isAdminPage)
        {
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                    Hello @UserManager.GetUserName(User)!
                </a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-controller="Admin" asp-action="Logout" method="post">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">
                        Logout
                    </button>
                </form>
            </li>

        }
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" id="forgot-password" asp-area="Identity" asp-page="/Account/ForgotPassword">ForgotPassword?</a>
        </li>
    }
</ul>
