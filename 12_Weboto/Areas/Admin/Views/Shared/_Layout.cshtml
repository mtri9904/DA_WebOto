<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trang Quản Trị</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background-color: #d0e7f9; /* Xanh nhạt */
        }

        .sidebar {
            width: 250px;
            background-color: #000; /* Màu đen */
            min-height: 100vh;
            color: white;
            padding: 15px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px;
                margin: 5px 0;
                border-radius: 5px;
            }

                .sidebar a:hover {
                    background-color: #444;
                }

        .content {
            flex-grow: 1;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar">
            <h4 class="text-light">Quản lý Car</h4>
            <a asp-area="Admin" asp-controller="Car" asp-action="Index">
                <i class="fas fa-home"></i> Bảng điều khiển
            </a>
            <a asp-area="Admin" asp-controller="Car" asp-action="Add">
                <i class="fas fa-car"></i> Sản phẩm
            </a>
            <a asp-area="Admin" asp-controller="Brand" asp-action="Index">
                <i class="fas fa-car"></i> Hãng xe
            </a>
            <a asp-area="" asp-controller="User" asp-action="Index">
                <i class="fas fa-user"></i> Người dùng
            </a>
            <a asp-area="" asp-controller="Report" asp-action="Index">
                <i class="fas fa-chart-bar"></i> Báo cáo
            </a>
        </nav>

        <!-- Nội dung chính -->
        <div class="content w-100">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>