@model _12_Weboto.Models.Brand

@{
    ViewData["Title"] = "Chi tiết thương hiệu";
}

<h2>Chi tiết thương hiệu</h2>

@if (Model != null)
{
    <div>
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>Tên:</strong> @Model.TenHang</p>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div>
                <p><strong>Ảnh thương hiệu:</strong></p>
                <img src="@Model.ImageUrl" class="img-thumbnail" style="width: 200px; height: auto;" />
            </div>
        }
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
}
else
{
    <p class="text-center text-danger">Không tìm thấy thông tin thương hiệu.</p>
}
