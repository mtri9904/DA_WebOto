@model _12_Weboto.Models.Brand

@{
    ViewData["Title"] = "Chỉnh sửa thương hiệu";
}

<h2>Chỉnh sửa thương hiệu</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="TenHang"></label>
        <input asp-for="TenHang" class="form-control" />
        <span asp-validation-for="TenHang" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
