@model List<_12_Weboto.Models.Car>
@{
    ViewData["Title"] = "Danh sách xe";
}

<h3 class="text-center mb-4">🚘 Danh sách xe</h3>

<!-- Form tìm kiếm -->
<form method="get" action="@Url.Action("CarList", "Car")">
    <div class="input-group mb-4 w-50 mx-auto">
        <input type="text" name="searchQuery" class="form-control" placeholder="Tìm kiếm xe..."
               value="@Context.Request.Query["searchQuery"].ToString()" />
        <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
    </div>
</form>

<!-- Danh sách xe -->
<div id="carListContainer">
    @if (Model == null || !Model.Any())
    {
        <p class="text-center text-danger">🚗 Không có xe nào để hiển thị.</p>
    }
    else
    {
        <div class="row">
            @foreach (var car in Model)
            {
                <div class="col-12 col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@Url.Content(car.Images?.FirstOrDefault()?.ImageUrl ?? "/uploads/default-car.jpg")"
                             class="card-img-top" alt="@car.TenXe" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title">@car.TenXe</h5>
                            <p class="card-text text-muted">@car.MoTa</p>
                            <p><strong>Giá:</strong> @car.GiaTien.ToString("N0") VND</p>
                            <div class="form-check mb-2">
                                <input class="form-check-input car-checkbox" type="checkbox" name="selectedCars" value="@car.Id" />
                                <label class="form-check-label">Chọn để so sánh</label>
                            </div>
                            <a href="@Url.Action("Details", "Car", new { id = car.Id })" class="btn btn-primary w-100">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Nút so sánh -->
<div class="text-center mt-3">
    <button class="btn btn-success" onclick="compareCars()">So sánh</button>
</div>

<!-- Scripts -->
@section Scripts {
    <script>
        function compareCars() {
            var selected = [];
            document.querySelectorAll('input[name="selectedCars"]:checked').forEach(el => {
                selected.push(el.value);
            });

            if (selected.length < 2) {
                alert("Cần chọn ít nhất 2 xe để so sánh!");
                return;
            }

            window.location.href = '/Car/CompareCars?carIds=' + selected.join(',');
        }
    </script>

}
