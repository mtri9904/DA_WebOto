@model IEnumerable<_12_Weboto.Models.Order>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Đơn hàng của tôi</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Mã đơn hàng</th>
                            <th scope="col">Xe</th>
                            <th scope="col">Giá</th>
                            <th scope="col">Trạng thái</th>
                            <th scope="col">Ngày đặt</th>
                            <th scope="col">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>#@order.OrderId</td>
                                <td>@order.Car.TenXe</td>
                                <td class="fw-bold text-success">@order.Car.GiaTien.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                                <td>
                                    <span class="badge @GetStatusClass(order.Status.ToString())">
                                        @order.Status.ToString()
                                    </span>
                                </td>
                                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <a href="@Url.Action("Details", "Order", new { id = order.OrderId })"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> Xem
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center" role="alert">
                    Hiện tại bạn chưa có đơn hàng nào!
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .table-responsive {
            min-height: 200px;
        }

        .badge {
            font-weight: bold;
            padding: 5px 10px;
        }

        .badge-pending {
            color: #856404 !important; 
        }

        .badge-success {
            color: #28a745 !important; 
        }

        .badge-cancelled {
            color: #ff0000 !important; 
        }

        .badge-other {
            color: #ffffff !important; /* Màu chữ trắng */
        }

    </style>
}

@functions {
    string GetStatusClass(string status)
    {
        return status switch
        {
            "Processing" => "badge-pending",
            "Completed" => "badge-success",
            "Failed" => "badge-cancelled",
            _ => "badge-other" // Mặc định cho các trạng thái khác
        };
    }
}
